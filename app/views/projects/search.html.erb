<div>
<%= form_tag(search_path, :method => :get) do %>
<div class="field">
<%= text_field_tag :search params[:q] %>
</div>
<div class="submit">
<%= submit_tag "Search" %>
</div>
<% end %>

<div id="search_display">
<%if !@projects.empty? %>
<% @projects.each do |p| %>
<%= link_to p.name, p %>
<% end %>
<% end %>
</div>
</div>

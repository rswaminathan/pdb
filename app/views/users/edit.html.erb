<div class="container" style="padding-top:20px; padding-bottom:20px; min-height: 550px">
	<div class="home_register span-12" style="float:center; margin-left: 16em">
		<h1>Account Settings</h1>
		<%= form_for @user, :html => { :multipart => true } do |f| %>
			<%= render	'shared/error_messages', :object => f.object %>
			<div class="field">
				<%= f.label :name %><br />
				<%= f.text_field :name %>
			</div>
			<div class="field">
				<%= f.label :email %><br />
				<%= f.text_field :email %>
			</div>	
			<div class="field">
				<%= f.label :new_password %><br />
				<%= f.password_field :password %>
			</div>
			<div class="submit">
				<%= f.submit "Edit Account" %><br />
			</div>
		<% end %>
	</div>
</div>

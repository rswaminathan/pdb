<% if list_project.photo.exists? %>
	<div class="list_project list_project_wpic span-18 last">
		<div id="user_projects_photo" class="span-4">
			<% logo = image_tag list_project.photo.url(:standard), :class=> "list-project-picture" %><%= link_to logo, list_project  %>
		</div>					
		<div class="span-14">
			<div class="list-project-middle-position">
				<div class="list-project-bottom-push">
					<h1> <%= link_to list_project.name, list_project%> </h1>
							<% if list_project.abstract.nil? || list_project.abstract.empty? %>
								<p><%= strip_tags(truncate(list_project.description, :length => 220)) %></p>
							<% else %>
								<p><%= strip_tags(truncate(list_project.abstract, :length => 220)) %></p>
							<% end %>
				</div>
				<div class="span-14">
          <h2><%= raw list_project.users.first(4).collect{|u| link_to(u.name, user_path(u))}.to_sentence %></h2>
				</div>
			</div>
			
		</div>
	</div>		
<%else%>		
	<div class="list_project list_project_wopic span-18 last">
		<div class="span-18 last">
			<div class="list-project-middle-position" style="padding-left:0">
				<div class="list-project-bottom-push">
					<h1> <%= link_to list_project.name, list_project%> </h1>
						<% if list_project.abstract.nil? || list_project.abstract.empty? %>
							<p><%= (truncate(strip_tags(list_project.description), :length => 360)) %></p>
						<% else %>
							<p><%= (truncate(strip_tags(list_project.abstract), :length => 360)) %></p>
						<% end %>
				</div>
				<div class="span-17">
          <h2><%= raw list_project.users.first(4).collect{|u| link_to(u.name, user_path(u))}.to_sentence %></h2>
				</div>
			</div>
		</div>
	</div>	
<%end%> 		


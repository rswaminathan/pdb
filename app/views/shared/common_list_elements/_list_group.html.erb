<% group = list_group %>

	<% if group.photo.exists? %>
		<div class="list_project list_project_wpic span-18 last">
			<div id="user_projects_photo" class="span-4">
				<% logo = image_tag group.photo.url(:standard), :class=> "list-project-picture" %><%= link_to logo, group  %>
			</div>					
			<div class="span-12 last">
				<div class="list-project-middle-position">
					<div class="list-project-bottom-push span-12">
						<h1> <%= link_to group.name, group%> </h1>
						<% if !group.description.nil? && !group.description.empty? %>
							<p><%= (truncate(strip_tags(group.description), :length => 260)) %></p>
						<% end %>
					</div>
					<div class="span-12">
						<% (0..4).each do |i| %>
							<% if !(group.projects[(i+1)..4].nil? || group.projects[(i+1)..4].empty?) %>
								<h2><%= link_to (group.projects[i].name << ","), group.projects[i] %></h2>
							<% elsif group.projects[i] %>
								<h2><%= link_to (group.projects[i].name), group.projects[i] %></h2>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>		
	<%else%>		
		<div class="list_project list_project_wopic span-18 last">
			<div class="span-18 last">
				<div class="list-project-middle-position" style="padding-left:0">
					<div class="list-project-bottom-push span-18">
						<h1> <%= link_to group.name, group%> </h1>
						<% if !group.description.nil? && !group.description.empty? %>
							<p><%= (truncate(strip_tags(group.description), :length => 260)) %></p>
						<% end %>
					</div>
					<div class="span-18">
						<% (0..4).each do |i| %>
							<% if !(group.projects[(i+1)..4].nil? || group.projects[(i+1)..4].empty?) %>
								<h2><%= link_to (group.projects[i].name << ","), group.projects[i] %></h2>
							<% elsif group.projects[i] %>
								<h2><%= link_to (group.projects[i].name), group.projects[i] %></h2>
							<% end %>
						<% end %>
					</div>
				</div>
			</div>
		</div>	
	<%end%> 		


<h1>Edit Collaborators</h1>
<%= form_for(:user, :url => update_collaborators_project_path) do |f| %>
	<div class="field">
		<%= f.label :collaborator, "Collaborator's Name" %><br />
	  <%= f.text_field :name %>
	</div>
	<div class="submit">
		<%= f.submit "Add Collaborator" %><br />
	</div>
<% end %>
<br \>
<hr>
<div id="list_collaborators">
<h2> Current Collaborators</h2>
<% @users.each do |u| %>
<%=u.name %> | <%=u.email %> | <%= link_to "Remove Collaborator", delete_collaborators_project_path(@project, :user_id => u.id) , :confirm => "Are you sure you want to remove this collaborator?", :method => :delete %><br />
<% end %>
</div>


<%= form_for @project, :html => { :multipart => true } do |f|%>
	<%= render	'shared/error_messages', :object => f.object %>

	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	</br>
	<div class="field">
		<%= f.label "Project Photo" %><br />
		<%= "Note: This is shown on the home page and also acts as the project tag" %><br />
		<%= f.file_field :photo %>
	</div>
	</br>
	<div class="submit">
		<%= f.submit "Save" %><br />
	</div>
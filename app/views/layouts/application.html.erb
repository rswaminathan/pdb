  padding-top: 0.5em;
}

a{
	color: #333;   
	font-weight: bold;
	text-decoration: none;
}
#project_summary td{
  background: inherit; 
}

#login_special{
	color: #660;   
	font-size: 1.3em;	
	margin-top: 1em;
   margin-bottom: 1em;
 	border: 1px solid #D8A800;
	text-align:center;

}
#login_special a{
	color: #B67300;   
	text-align:center;	


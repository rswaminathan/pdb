<% content_for :head do %>
<%= javascript_include_tiny_mce_if_used %>
<%= tiny_mce if using_tiny_mce? %>
<%= stylesheet_link_tag 'project' %>
<%= stylesheet_link_tag 'user-list/user-regular' %>
<% end %>


<%= form_for(@project) do |f| %>


<div class="container" id="general-positioning">		
    <table cellspaceing="0" id="project-main-background-outer">
        <tbody>			
            <tr>			
                <!---<td class="span-6" id="project-sidebar-outer-position">
                    <div class="span-6">
                        <% javascript_include_tag "mulitselector" %>


                        <div id="project_tabs_left">
                            <div style="width:100%; background:rgba(250,250,250,0.6); border-radius: 0 0.2em 0 0; float:left; padding-bottom:1em">
                                <div style="padding:0.6em 0.5em 0.5em 0.5em">
                                    <div class="header_tabs" id = 'current_tab'>	
                                        <%= link_to "Home", @project %>
                                    </div><br />
                                    <div class="header_tabs">
                                        New Pages Go Here! 
                                    </div><br />
                                </div>
                            </div>
                        </div>


                        <div id="project_page_align">	

                            <div id="project-files-align">
                                <% f.fields_for :links do |link_field| %>
                                <div class="field">
                                    <%= link_field.label :add_external_link %><br />
                                    <%= link_field.text_field :link, :size => 18%>
                                </div>
                                <% end %>
                                <div class="span-5 last">
                                    <% f.fields_for :attachments do |attachments_field| %>
                                    <div class="field">
                                        <%= attachments_field.label :Upload_File %><br />
                                        <%= attachments_field.file_field(:file, :size => "30") %>
                                    </div>
                                    <% end %>
                                </div>
                            </div>
                        </div>
                    </div>


                </td>--->			

                <td id="project-main-background-position"> 
                    <div class="container span-18 last" id="project-main-background-inner">
                        <div id="#project-header-user_pictures-positioning">
                            <% if @user.profile.photo.exists? %>
                            <div class="project-header-user_pictures-size"> 
                                <% logo = image_tag @user.profile.photo.url(:teeny)%> 
                                <%= link_to logo, @user, :class => "left"  %> 
                            </div>
                            <% end %>
                        </div>
                        <div class="span-12" >  
                            <%= render 'shared/error_messages', :object => f.object %>

                            <div class="field" >					
                                <%= f.text_field :name, :id=>"project_header_name", :style=>"width:500px",:placeholder => "Project Name" %></div>


                            <div id="project-edit-include_collaboratars" >
                                <%= f.label :collaborators %><br />
                                <%= f.text_field :collaborator_tokens %>
                                <%= text_field_tag 'add_by_email','',:placeholder => "...or add by email(comma separated)", :id=>"project-edit-collaborators-field" %>
                            </div>

                            <%= hidden_field_tag 'cids' %>
                        </div>

                        <div class="span-6 last" id="added_collaborators" style="float:right">
                        </div>

                        <hr class="separation-line">
                        <div class="span-18 last" id="project_new_right">
                            <div class="span-5">
                                <div class="field project-edit-form-placement">			
                                    <%= f.label "Abstract (300 Characters Max)" %><br />		
                                    <%= f.text_field :abstract, :id=>"project-edit-abstract-field" %>
                                </div>
                            </div>
                            <div class="span-5">

                                <div class="field project-edit-form-placement">
                                    <%= f.label "Tags (Separate with Commas)" %><br />
                                    <%= f.text_field :kind_list, :value => @tag_string, :id=>"project-edit-tags-field" %></br>
                                </div>
                            </div>
                            <div class="span-5">

                                <div class="field project-edit-form-placement">
                                    <%= f.label :add_project_picture %>
                                    <%= f.file_field :photo %>
                                </div>
                            </div>
                            <hr class="separation-line">

                            <div class="field">
                                <%= f.text_area :description,:class => :mceEditor %>
                            </div>

                            <hr class="separation-line">


                            <div class="submit">
                                <%= f.submit "Create Project" %><br />
                            </div>
                        </div>

                    </div>
                    <%= javascript_tag do %>
                    $(function() {
                    $("#project_collaborator_tokens").tokenInput("/users.json", {
                    crossDomain: false,
                    theme: "facebook"
                    });
                    });
                    <% end %>
                </tr>			
            </tbody>
        </div>
    </table>
</div>

<% end %>



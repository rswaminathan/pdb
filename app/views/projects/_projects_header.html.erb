<div id="project_buttons_center">
	<% if @pages.any?%>
		<% @pages.each do |page| %>
			<div id="project_buttons" <%= "id = 'current_project_button'" if page.title == params[:page] %>>
				<%= link_to page.title.titleize, project_path(@project, :page => page.title) %>
			</div>
		<% end %>
		<div id="project_buttons" <%= "id = 'current_project_button'" if @page_is_main %>>	
			<%= link_to "Home", @project %>
		</div>
	<% end %>
	<% if current_project_user? %>
		<div <%= @pages.any? ? "id=" : "class=" %>"project_buttons">
			<b><%= link_to "New Page", newpage_project_path %></b>
		</div>
	<% end %>
</div>
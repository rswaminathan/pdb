

<div class="user_huge" >
	<div class="user_pic" style="height:80px; width:80px"><%= image_tag user.profile.photo.url(:standard)%></div> 
	<div class="user_name", style="margin-left:0.8em; font-size:1.3em">
		<%= link_to user.name, user %>
		<% if admin_user? %>
			<div id="delete_user" style="float: left;">
				<%= form_tag user_path(user), :method => :delete, :confirm => "Are you sure?" do %>
					<div class="submit">
						<%= submit_tag "Delete User" %><br />
					</div>
				<% end %>
			</div>
			<br />
		<% end %>
	</div>
	<div class="user_info", style="margin-left:1.2em; font-size:1em; margin-top:0.4em">
		<% @profile = user.profile %><%= @profile.department %> <%= @profile.occupation %> <%= @profile.year %><br />
	</div>


	<div class="margin-left:30em">
	<% user.projects[0,7].each do |p| %>
	<% if p.photo.exists?%>
		<div style="max-height:60px;margin-right:5px; float:right; position:relative; top:-49px; border-left: 2px solid #ddd; border-top: 2px solid #ddd; border-right: 2px solid #ddd; border-bottom: 2px solid #ddd"> 
		<% logo = image_tag p.photo.url(:thumb)%> <%= link_to logo, p %> </div>
	<% end %>
	<% end %>
	</div>
	<div class="user_info", style="margin-left:1.2em; font-size:1em; margin-top:0.4em;">
		<%= link_to "#{user.projects.count} #{user.projects.count == 1 ? 'Project' : 'Projects'}", user_path(user) %> | <%= link_to "#{user.followers.count} #{user.followers.count == 1 ? 'Follower' : 'Followers'}", user_path(user, :page => "followers") %>
	</div>
	
</div>


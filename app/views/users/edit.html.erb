<h1>Edit Profile</h1>
<%= form_for(@user) do |f| %>
	<%= render	'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :email %><br />
		<%= f.text_field :email %>
	</div>
	<div class="field">
		<%= f.label :password %><br />
		<%= f.password_field :password %>
	</div>
	<div class="field">
		<%= f.label :password_confirmation, "Confirm password" %><br />
		<%= f.password_field :password_confirmation %>
	</div>
 	<div class="field">
		<%= f.label :profile_picture %><br />
		<%= f.file_field :profile_picture %>
	</div>

	<div class="submit">
		<%= f.submit "Update Profile" %><br />
	</div>
<% end %>

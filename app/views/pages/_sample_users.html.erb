<p> Top Users: </p>
<div class="span-22">
	<div id="home_sample_projects" class="span-18" style="margin-left:5em; font-size: 0.8em">
		<table>
			<% c=0 %>
			<% [User.find_by_name("Rahul"),User.find_by_name("Ozzie Gooen"),User.find_all_by_name("Matt McDermott")[1],User.find_by_name("Q")].each do |i| %>
				<% if !i.nil? %>
					<% if c%2==0 %>
						<tr>
					<% end %>
							<td width="80px;"><%logo = image_tag i.profile.photo.url(:thumb) %><%= link_to logo, i %></td>
							<td>
								<div id="sample_project_name_div" ><%= link_to i.name, i %></div>
								<div style="color:#ddd; font-size: 0.7em">
									<% @profile = i.profile%>
									<%= @profile.department %> <%= @profile.occupation %> <%= @profile.year %>
								</div>
							</td>
					<% if c%2==1 %>
						</tr>
					<% end %>
					<% c+=1 %>
				<% end %>
			<% end %>
		</table>
	</div>
</div>
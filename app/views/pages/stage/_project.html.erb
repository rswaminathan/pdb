
<% if project.class == Project %>
<% u = project %>
	<div id="home-project-list" class= "span-18 last">			
		<div class="span-12">
		<div style = "padding-left:1em">
			<%= render 'pages/stage/project/project_heading', :project => project %>
			<% if u.photo.exists? %>	
				<%= render 'pages/stage/project/project_wpic', :project => project %>
			<% else %>
				<%= render 'pages/stage/project/project_woutpic', :project => project %>
			<% end %>
			<div class="more-projects" %>
				<% for i in 0..(u.project_pages.count-1) %>
					<% page = u.project_pages[i] %>
					<%= link_to page.title.titleize, project_path(u, :page => page.title) %><%= u.project_pages[i+1].nil? ? "" : " | " %>
				<% end %>
			</div>
		</div>
		</div>
	  	<div id="home_sidebar_<%= project.id %>" class="span-6 last">
			<%= render 'pages/stage/project/project_sidebar', :project => u %>
		</div>		
	</div>
<%else%>
<%= render 'pages/user', :user => project %>
<% end %>
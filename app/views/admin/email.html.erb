<%= form_for :email, :url => send_email_admin_path do |f| %>
  		<div class="field">
				<%= f.label :subject %><br />
				<%= f.text_area :subject %>
			</div>

			<div class="field">
				<%= f.label :message %><br />
				<%= f.text_area :message %>
			</div>
    
			<div class="submit">
				<%= f.submit "Send to User" %><br />
			</div>
<% end %>

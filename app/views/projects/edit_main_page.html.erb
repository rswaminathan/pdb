
<div class="container" style="padding-top:8px; padding-bottom:20px; min-height: 550px; clear:none">		



<% if current_project_user? %>
  <% content_for :head do %>
<%= render 'projects/yui_dependencies' %>
  <% end %>
<% end %>
<div class="yui-skin-sam home_register">
<h1>Edit Project</h1>
<%= form_for @project, :html => { :multipart => true } do |f|%>
	<%= render	'shared/error_messages', :object => f.object %>

	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	</br>
	<div class="field">
		<%= f.label "Project Photo" %><br />
		<%= "Note: This is shown on the home page and also acts as the project tag" %><br />
		<%= f.file_field :photo %>
	</div>
	</br>
	<div class="submit">
		<%= f.submit "Save" %><br />
	</div>
<% end %>
</div>
<%= render 'projects/yui_script', :editor => "project_description" %>

		
</div>

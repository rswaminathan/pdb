</head>
<body>
   <%= render 'layouts/header' %>

<div class="container">
<section class ="round">
	<% flash.each do |key, value| %>
		<div class = "flash <%= key %>"><%= value %></div>
	<% end %>
	<%= yield %>
</section>
</div>
<%= render 'layouts/footer' %>
<%= debug(params) if Rails.env.development?%>

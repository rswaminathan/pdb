<div class="user" >
	<div class="user_pic" style="float:left;"><%= image_tag user.profile.photo.url(:thumb)%>  </div> 
	<div class="user_name"><%= link_to user.name, user %></div>
	<div class="user_info">
		<% @profile = user.profile %><%= @profile.department %> <%= @profile.occupation %> <%= @profile.year %><br />
	</div>
  <% if admin_user? %>
  	<div id="delete_user" style="float: right;">
		<%= form_tag user_path(user), :method => :delete do %>
			<div class="submit">
				<%= submit_tag "Delete User" %><br />
			</div>
		<% end %>
	</div>
    <% end %>
</div>

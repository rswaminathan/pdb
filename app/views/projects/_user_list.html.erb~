<%if @users.any? %>  
	<div id="users_list">
		<% @users.each do |u| %>
			<div class="user" >
				<div class="user_pic"><% logo = image_tag u.profile.photo.url(:thumb)%> <%= link_to logo, u, :class => "left"  %></div>    
				<div class="user_name"><%= link_to u.name, u %></div>
				<div class="user_info">
					<% @profile = u.profile %><%= @profile.department %> <%= @profile.occupation %> <%= @profile.year %><br />
					<b><%= link_to("Remove Collaborator", delete_collaborators_project_path(@project, :user_id => u.id) , :confirm => "Are you sure you want to remove this collaborator?", :method => :delete) if current_project_user? %></b>
				</div>
			</div>
		<% end%>
	</div>
<% end %> 
<% if current_project_user? %>
	<%= form_tag edit_collaborators_project_path do%>
		<div class="submit">

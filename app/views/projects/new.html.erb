<h1>Add new Project</h1>
<%= form_for(@project) do |f| %>
	<%= render	'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name %><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :kind %><br />
		<%= f.text_field :kind %>
	</div>
	<div class="field">
		<%= f.label :description %><br />
		<%= f.text_area :description %>
	</div>
	<div class="submit">
		<%= f.submit "Add Project" %><br />
	</div>
<% end %>
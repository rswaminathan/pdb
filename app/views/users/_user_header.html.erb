<div id="user_header_background" class="span-24">
	<div id="user_header" class="span-24">
		<h1><%= @user.name %></h1>
		<div class="span-10">
			<h2>
				<% if @user==current_user %>
					<%= link_to 'Edit Profile', edit_profile_user_path %> | 
				<% end %>
				<%= @profile.department %> <%= @profile.occupation %> <%= @profile.year %>
			</h2>
		</div>
		<div class="span-14-last">
			<% ["About","Projects","Feed"].each do |p| %>
				<div class="header_tabs" <%="id = 'current_tab'" if p.downcase == params[:page] %>>	
					<%= link_to p, user_path(@user, :page => p.downcase) %>
				</div>
			<% end %>
		</div>
	</div>
</div>
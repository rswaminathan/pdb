<div class="container" style="padding-top:20px; padding-bottom:20px; min-height: 550px">
	<div class="home_register span-12" style="float:center; margin-left: 16em; font-size:1.2em;">
		<h1>Edit Profile</h1>
		<%= form_for @profile, :url => update_profile_user_path, :html => { :multipart => true } do |f| %>
		<%= render	'shared/error_messages', :object => f.object %>
		<%= "All fields are optional"%></br></br>
		<div class="field">
			<%= f.label "Short Bio" %><br />
			<%= f.text_field :quote %>
		</div>
		</br>
		<div class="field">
			<%= f.label 'Facebook link' %><br />
			<%= f.text_field :facebook %>
		</div>
		<div class="field">
			<%= f.label 'LinkedIn link' %><br />
			<%= f.text_field :linked_in %>
		</div>
		<div class="field">
			<%= f.label 'Twitter link' %><br />
			<%= f.text_field :twitter %>
		</div>
		<div class="field">
			<% if @profile.photo.exists? %>
				<div style="width:200px; float:right"> <%= image_tag (@profile.photo.url) %> </div>
				</br>
				<%= f.label "Enter Different Profile Photo" %><br />
			<% else %>
				<%= f.label :photo %><br />
			<% end %>
			<%= f.file_field :photo %>
		</div>
		</br>
		<div class="field">
			<%= f.label :interesting_photo %><br />
			<%= f.file_field :interesting_photo %>
		</div>
		</br>
		<div class="field">
			<%= f.label :awesome_photo %><br />
			<%= f.file_field :awesome_photo %>
		</div>
		</br>
		<div class="submit">
			<%= f.submit "Save Profile" %><br />
		</div>
		<% end %>
	</div>
</div> 


<div class="container", style="margin-top:3em">
<div id="blurb">
	<table>
		<tr>
			<td>
				<h3>Showcase Your Work and Share it with Others<br /></h3>
				<h3><%= link_to "Browse New Content", 'home1'%></h3>
			</td>
			<td>
				<div id="facebook-description">
					Get <div id="project-week"> The Project of the Week   </div></br>
					From Holono on Facebook 
				</div>
				<div id="facebook-center">
					<script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like href="http://www.facebook.com/pages/Holono/196684820344419" layout="button_count" show_faces="false" width="10" colorscheme="light"></fb:like>
				</div>
			</td>
		</tr>
	</table>
</div>
	<div id="home_top_container">	
		<div id="home_project_box" class="span-16">
			<div id="slider", style="margin-left:8px">
				<% @slider_projects.each do |p| %>
					<a href="<%= project_url(p) %>"><img src="<%= "frontpage/#{p.id}.jpg"%>" title="<%= "#title_#{p.id}" %>"/></a>
				<% end %>
			</div>
		</div>
		<div id="registration_box" class="span-7"><%= render 'pages/signup' %></div>
	</div>

	<% @slider_projects.each do |p| %>
		<div id="title_<%= p.id %>" class="nivo-html-caption">
			<strong><%= "#{p.name}" %>: </strong> <%= "#{p.abstract}" %>
		</div>
	<% end %>
	<%render 'pages/main_bottom' %>


</div>

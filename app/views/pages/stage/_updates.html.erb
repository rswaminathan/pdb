<% h = { :L => []} %>
<% @user.projects.each do |project| %>
	<% (h[:L] += [[project,project.comments]]) unless (project.comments.empty?) %>
<% end %>
<% h[:L].each do |p| %>
	<br />
	<b><%= link_to p[0].name, p[0] %><br /></b>
	<% p[1].sort!{|t1,t2| t1.created_at <=> t2.created_at} %>
	<% (p[1][0..4]).each do |c| %>
		<%= link_to c.user.name, c.user %> : <%= c.body %><br />
	<% end %>
<% end %> 